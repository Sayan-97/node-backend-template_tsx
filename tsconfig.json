{
  "compilerOptions": {
    "target": "esnext",
    "module": "preserve",
    "rootDir": "src",
    "baseUrl": "./",
    "outDir": "dist",
    "moduleDetection": "force",
    "resolveJsonModule": true,
    "allowJs": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "removeComments": true,
    "strict": true,
    "verbatimModuleSyntax": true,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
